<!-- signup.html -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up</title>
    <link rel="icon" href="./image.png" type="image/x-icon" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="bg-white p-8 rounded-xl shadow-md w-full max-w-md">
      <h2 class="text-3xl font-bold mb-6 text-center">Sign Up</h2>
      <% if (typeof error !== "undefined") { %>
      <div
        class="bg-red-100 text-red-700 px-4 py-2 rounded-md mb-4 text-center font-semibold"
      >
        <%= error %>
      </div>
      <% } %>
      <form action="/signup" class="flex flex-col gap-4" method="POST">
        <input
          type="text"
          name="username"
          placeholder="Full Name"
          class="border rounded-md px-4 py-2 w-full"
          required
        />
        <input
          type="email"
          name="email"
          placeholder="Email"
          class="border rounded-md px-4 py-2 w-full"
          required
        />
        <input
          type="password"
          name="password"
          placeholder="Password"
          class="border rounded-md px-4 py-2 w-full"
          required
        />
        <!-- <input
          type="password"
          placeholder="Confirm Password"
          class="border rounded-md px-4 py-2 w-full"
        /> -->
        <button
          type="submit"
          class="bg-green-600 text-white rounded-md py-2 hover:bg-green-700 transition"
        >
          Sign Up
        </button>
      </form>
      <p class="mt-4 text-center text-sm text-gray-600">
        Already have an account?
        <a href="/login" class="text-blue-600 hover:underline">Login</a>
      </p>
    </div>
  </body>
</html>
