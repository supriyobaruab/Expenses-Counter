<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Track your money</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 min-h-screen">
    <section class="w-full flex flex-col items-center py-10">
      <div class="max-w-6xl w-full px-4">
        <!-- Grid Section -->
        <div class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-4 gap-6 mb-10">
          <div
            class="bg-white flex flex-col justify-center items-center rounded-2xl shadow-md border-t-4 h-40 hover:border-t-8 border-red-300 duration-300"
          >
            <h1 class="font-bold text-2xl">Bank</h1>
            <p class="text-2xl mt-2 info" id="bank">0</p>
          </div>
          <div
            class="bg-white flex flex-col justify-center items-center rounded-2xl shadow-md border-t-4 h-40 hover:border-t-8 border-blue-300 duration-300"
          >
            <h1 class="font-bold text-2xl">Bkash</h1>
            <p class="text-2xl mt-2 info" id="bkash">0</p>
          </div>
          <div
            class="bg-white flex flex-col justify-center items-center rounded-2xl shadow-md border-t-4 h-40 hover:border-t-8 border-yellow-300 duration-300"
          >
            <h1 class="font-bold text-2xl">Cash</h1>
            <p class="text-2xl mt-2 info" id="cash">0</p>
          </div>
          <div
            class="bg-white flex flex-col justify-center items-center rounded-2xl shadow-md border-t-4 h-40 hover:border-t-8 border-green-300 duration-300"
          >
            <h1 class="font-bold text-2xl">Total</h1>
            <p class="text-2xl mt-2 info" id="total">0</p>
          </div>
        </div>

        <!-- Form Section -->
        <div class="bg-white rounded-2xl p-8 space-y-6 shadow-md border-t-2">
          <p class="text-3xl font-bold underline underline-offset-8">
            Add Transaction
          </p>
          <form
            action="http://localhost:3000/api"
            method="post"
            class="grid grid-cols-1 sm:grid-cols-2 gap-6"
          >
            <div>
              <label class="text-xl font-bold block mb-2">Type</label>
              <select
                name="type"
                class="w-full h-10 border-2 border-gray-200 rounded p-2"
                required
              >
                <option disabled selected value="">Select an option</option>
                <option value="income">Income</option>
                <option value="expense">Expense</option>
              </select>
            </div>

            <div>
              <label class="text-xl font-bold block mb-2">Amount</label>
              <input
                name="amount"
                type="number"
                class="w-full h-10 border-2 border-gray-200 rounded p-2"
                placeholder="Enter amount"
                required
              />
            </div>

            <div>
              <label class="text-xl font-bold block mb-2">Account Type</label>
              <select
                name="accntType"
                class="w-full h-10 border-2 border-gray-200 rounded p-2"
                required
              >
                <option disabled selected value="">Select an option</option>
                <option value="bank">Bank</option>
                <option value="bkash">Bkash</option>
                <option value="cash">Cash</option>
              </select>
            </div>

            <div>
              <label class="text-xl font-bold block mb-2">Description</label>
              <input
                name="description"
                type="text"
                class="w-full h-10 border-2 border-gray-200 rounded p-2"
                placeholder="Enter description"
              />
            </div>

            <div class="sm:col-span-2 flex justify-center mt-6">
              <button
                class="bg-blue-500 text-white w-32 p-3 rounded-md transform hover:scale-105 duration-300"
              >
                Submit
              </button>
            </div>
          </form>
        </div>
      </div>
    </section>
    <script src="./index.js"></script>
  </body>
</html>
